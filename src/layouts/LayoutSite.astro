---
import { ClientRouter } from 'astro:transitions';

const { class: className, title = "Anik von Rohr | Systemische Beratung" } = Astro.props;

import Navbar from "@components/site/common/Navbar.astro";
import Footer from "@components/site/common/Footer.astro";

import "../styles/global.css";
---

<html lang="de">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
<link rel="manifest" href="/site.webmanifest">
    <link
      href="https://cdn.jsdelivr.net/npm/swiffy-slider@1.6.0/dist/css/swiffy-slider.min.css"
      rel="stylesheet"
      crossorigin="anonymous"
    />
    <title>{title}</title>
    <ClientRouter />
  </head>
  <body class={className}>
    <Navbar />
    <div>
      <slot />
    </div>
    <Footer />
  </body>
</html>
