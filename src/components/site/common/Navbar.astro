---
import { Image } from 'astro:assets';
import Logo from "@images/logo-anik.png"
---
<script src="https://cdn.jsdelivr.net/npm/alpinejs@2"></script>

    <nav id='navbar' x-data="{ open: false }" class="fixed top-0 z-50 w-full text-white bg-[--primary-200]">
        <div class="flex items-center justify-between h-full p-4 px-12 mx-auto">

            <div class="flex-1">
                <a href="/"><span class="text-[var(--text-color-main)] text-4xl font-bold">Anik von Rohr</span></a>
            </div>
            <div>
                <Image src={Logo} alt="Logo" class="w-16 h-16">
            </div>
            <div class="flex justify-end flex-1 lg:hidden">
                <button @click="open = !open" class="text-white focus:outline-none ">
                    <svg x-show="!open" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                    </svg>
                    <svg x-show="open" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
            </div>
            <div :class="{ 'hidden': !open }" class="flex-1 gap-2 lg:text-2xl lg:flex lg:items-center lg:justify-end">
                <a href="#" class="mr-4">Systemische Beratung</a>
                <a href="#" class="mr-4">Ãœber mich</a>
                <a href="#contact">Kontakt</a>
            </div>
        </div>
    </nav>



<script>
    let lastScrollTop = 0; // This variable will hold the last scroll position
    const navbar = document.getElementById('navbar');

    window.addEventListener('scroll', function() {
    let currentScroll = window.scrollY || document.documentElement.scrollTop;
    
    if (currentScroll > lastScrollTop) {
        // Scroll Down
        navbar!.style.top = '-100px'; // Adjust based on navbar height
    } else {
        // Scroll Up
        navbar!.style.top = '0';
    }
    
    lastScrollTop = currentScroll <= 0 ? 0 : currentScroll; // For Mobile or negative scrolling
    }, false);
</script>

<style>
#navbar {
  transition: top 0.5s ease-in-out; /* Adjusted timing and easing */
  transition-delay: 500ms; /* Adjusted delay */
}
</style>