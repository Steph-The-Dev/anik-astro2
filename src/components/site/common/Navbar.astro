---
import { Image } from 'astro:assets';
import Logo from "@images/202404-anik-logo.svg"
---

    <nav id='navbar' x-data="{ open: false }" class="fixed top-0 z-50 w-screen">
        <div class="flex items-center justify-between h-full w-full py-4 px-4 lg:px-12 mx-auto bg-[--primary-200]">

            <div class="flex-1">
                <a href="/"><span id="nav__name" class="text-[var(--primary-700)] font-heading font-bold">Anik von Rohr</span></a>
            </div>

            <div>
                <Image src={Logo} alt="Logo" class="size-12 lg:w-16 lg:h-16">
            </div>

            <div id="menu__items" class="hidden lg:flex flex-1 justify-end text-[var(--primary-700)] w-1/3 right-0 font-body lg:items-center gap-3 xl:gap-8">
                <a href="#" class="">Systemische Beratung</a>
                <a href="#" class="">Über mich</a>
                <a href="#contact">Kontakt</a>
            </div>
            <!-- Mobile menu button -->
            <div class="flex justify-end flex-1 lg:hidden">
                <button @click="open = !open" class="text-[var(--primary-700)] focus:outline-none flex-row-reverse">
                    <svg x-show="!open" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                    </svg>
                    <svg x-show="open" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
            </div>
        </div>
        <!-- Mobile menu -->
        <div x-show="open" @click.away="open = false" @click="open = false" class="px-12 text-right flex flex-1 flex-col justify-end text-[var(--primary-700)] bg-[var(--primary-200)] w-full absolut right-0 font-body text-lg">
            <a href="#" class="">Systemische Beratung</a>
            <a href="#" class="">Über mich</a>
            <a href="#contact">Kontakt</a>
        </div>
    </nav>

<script>
    let lastScrollTop = 0; // This variable will hold the last scroll position
    const navbar = document.getElementById('navbar');

    window.addEventListener('scroll', function() {
    let currentScroll = window.scrollY || document.documentElement.scrollTop;
    
    if (document.documentElement.scrollTop > 100) {
        navbar!.style.top = '0';
    if (currentScroll > lastScrollTop) {
        // Scroll Down
        navbar!.style.top = '-110px'; // Adjust based on navbar height
    } else {
        // Scroll Up
        navbar!.style.top = '0';
    }
}
    
    lastScrollTop = currentScroll <= 0 ? 0 : currentScroll; // For Mobile or negative scrolling
    }, false);
</script>

<style>
    #menu__items {
        font-size: clamp(1rem, 1rem + .5vi, 2rem);
    }
#navbar {
  transition: top 0.5s ease-in-out; /* Adjusted timing and easing */
  transition-delay: 500ms; /* Adjusted delay */
}

#nav__name {
    font-size: clamp(0.75rem, 1.2rem + 2vw, 3rem);
}
</style>