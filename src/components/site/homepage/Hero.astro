---
import LayoutSite from '@layouts/LayoutSite.astro'
import { Image } from 'astro:assets';

import AnikHero from '@images/AnikHero-H30A1875.webp'
---

<LayoutSite>
    <main class="flex items-center justify-center h-screen mt-12">
        <section class="flex items-center justify-center gap-4 p-12 h-3/4">
            <div class="flex flex-col justify-around w-1/3 h-full mx-auto text-[var(--text-800)]">
                <div class="">
                    <h1 class="text-[var(--step-3)] font-heading font-black leading-tight text-wrap sm:leading-tight md:leading-tight text-4xl lg:text-6xl xl:text-8xl text-center">Herzlich Willkommen!</h1>
                </div>
                <div class="">
                    <h1 class="text-4xl font-bold leading-tight break-normal font-body sm:leading-tight md:leading-tight sm:text-4xl md:text-6xl lg:text-7xl">Ich heisse <span class="italic underline decoration-[var(--primary-400)] underline-offset-4">Anik von Rohr</span> und bin <span class="italic underline decoration-[var(--primary-400)] underline-offset-4">systemische Beraterin</span>.</h1>
                    </div>
                </div>
            <div class="w-2/3 h-full overflow-hidden">
                <Image src={AnikHero} alt="Anik von Rohr" class="object-cover object-center w-full h-full scale-110" />
            </div>
        </section>
    </main>
</LayoutSite>

<style>
    section {
        background-image: url(../../../assets/backgrounds/grainy-bg-#F7F0EA0201.webp);
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
        width: 100%;
        }
</style>