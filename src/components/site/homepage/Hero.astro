---
import LayoutSite from '@layouts/LayoutSite.astro'
import { Image } from 'astro:assets';

import AnikHero from '@images/AnikHero-H30A1875.webp'
---

<LayoutSite>
    <main class="h-[90dvh]">
        <section class="flex flex-col-reverse gap-1 mx-auto sm:p-4 lg:p-12 lg:flex-row">
            
            <div class="flex flex-col justify-between lg:justify-around w-full lg:w-1/3 p-2 lg:p-8 h-1/3 lg:h-full mx-auto bg-[var(--background-700)] text-[var(--text-100)]">
                <div class="">
                    <h1 class="text-4xl font-normal leading-tight wrap-normal font-heading text-wrap sm:leading-tight md:leading-tight lg:text-4xl">Herzlich Willkommen!</h1>
                </div>
                <div class="">
                    <h2 class="text-3xl font-bold break-normal text-balance font-body md:text-4xl xl:text-6xl xl:leading-snug">Ich heisse <span class="italic underline decoration-[var(--text-300)] underline-offset-8">Anik von Rohr </span> und bin <span class="italic underline decoration-[var(--text-300)] underline-offset-8">systemische Beraterin</span>.</h2>
                </div>
            </div>

            <div class="w-full h-full overflow-hidden ">
                <Image src={AnikHero} alt="Anik von Rohr" class="object-cover object-center h-full scale-110" />
            </div>

        </section>
    </main>
</LayoutSite>

<style>
    section {
        background-image: url(../../../assets/backgrounds/grainy-bg-F7F0EA0201.webp);
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
        width: 100%;
        height: 100%;
        }
</style>