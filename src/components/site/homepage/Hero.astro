---
import LayoutSite from "@layouts/LayoutSite.astro";
import { Image } from "astro:assets";

import AnikHero from "@images/AnikHero-H30A1875.webp";
---

<LayoutSite>
  <main>
    <section class="grid md:w-5/6 max-w-[1600px] mx-auto pb-8 md:pb-16">
      <div class="h-[100px] lg:h-[140px]"></div>
      <div
        id="introduction"
        class="flex flex-col-reverse gap-1 mx-auto lg:flex-row"
      >
        <div
          class="flex flex-col justify-between lg:justify-around w-full lg:w-1/3 p-4 h-content lg:h-full mx-auto bg-[var(--secondary-400)] text-[var(--text-100)]"
        >
          <h1
            id="hero__willkommen"
            class="font-bold leading-tight wrap-normal font-heading text-wrap sm:leading-tight md:leading-tight"
          >
            Herzlich Willkommen!
          </h1>
          <h2
            id="hero__vorstellung"
            class="leading-tight break-normal text-balance"
          >
            Anik von Rohr
            <br>
              systemische Beraterin
            </h2>
          </h2>
        </div>

        <div class="w-full overflow-hidden md:max-h-full min-h-[450px]">
          <Image
            id="hero__image"
            src={AnikHero}
            alt="Anik von Rohr"
            class="object-cover object-center h-full scale-110 hover:scale-125"
          />
        </div>
      </div>
    </section>
  </main>
</LayoutSite>

<style>
  #hero__willkommen {
    font-size: clamp(1.25rem, 1rem + 1.5vi, 3rem);
  }
  #hero__vorstellung {
    font-size: clamp(1rem, 1rem + 1vi, 2.5rem);
    font-family: Lato;;
  }
  #hero__image {
    transition: all 0.5s ease-in-out;
  }
</style>
