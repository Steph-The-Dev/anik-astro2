---
import LayoutSite from '@layouts/LayoutSite.astro'
import { Image } from 'astro:assets';

import AnikHero from '@images/AnikHero-H30A1875.webp'
---

<LayoutSite>
    <main class="">
        <section class="h-[90dvh] grid">
            <div class="md:flex h-[75px] lg:h-[100px]"></div>
            <div id="introduction" class="flex flex-col-reverse gap-1 mx-auto sm:p-4 lg:p-12 lg:flex-row">
                <div class="flex flex-col justify-between lg:justify-around w-full lg:w-1/3 p-2 lg:p-8 h-content lg:h-full mx-auto bg-[var(--secondary-400)] text-[var(--text-100)]">
                        <h1 id="hero__willkommen" class="font-normal leading-tight wrap-normal font-heading text-wrap sm:leading-tight md:leading-tight">Herzlich Willkommen!</h1>
                        <h2 id="hero__vorstellung" class="font-bold break-normal text-balance font-body xl:leading-snug">Ich heisse <span class="italic underline decoration-[var(--text-300)] underline-offset-8">Anik von Rohr </span> und bin <span class="italic underline decoration-[var(--text-300)] underline-offset-8">systemische Beraterin</span>.</h2>
                </div>
    
                <div class="w-full max-h-full overflow-hidden ">
                    <Image id="hero__image" src={AnikHero} alt="Anik von Rohr" class="object-cover object-center h-full scale-110 hover:scale-125" />
                </div>

            </div>
        </section>
    </main>
</LayoutSite>

<style>
    #hero__willkommen {
        font-size: clamp(1.5rem, 2rem + 1.5vi, 5rem);
    }
    #hero__vorstellung {
        font-size: clamp(1.5rem, 2rem + 1.25vi, 4rem);
    }
    #hero__image {
        transition: transform 0.5s ease-in-out;
    }
    section {
        background-image: url(../../../assets/backgrounds/grainy-bg-F7F0EA0201.webp);
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
        width: 100%;
        height: 100%;
        }
</style>