---
import LayoutSite from '@layouts/LayoutSite.astro'
import {Image} from 'astro:assets'
import Pencil from '@images/pencil.webp'
import GirlWithRedHat from '@images/girl-with-red-hat.webp'
import Graffiti from '@images/graffiti.webp'
import Batman from '@images/batman.webp'

---

<!-- Using the great slider by Swiffy: https://swiffyslider.com/ -->

<LayoutSite>
    <main class="h-screen p-12 bg-amber-100">
        <div class="h-full swiffy-slider slider-item-reveal slider-item-ratio-1x1 slider-nav-visible slider-nav-autoplay slider-nav-autopause" data-slider-nav-autoplay-interval="3000">
            <ul class="slider-container">
                <div class="relative slider-item">
                    <Image class="absolute" src={Pencil} alt="a few pencils" style="max-width: 100%;height: 100%;object-fit:cover;" />
                    <div class="absolute right-0 flex items-center content-center justify-center w-1/3 h-full px-4 bg-amber-100/50">
                        <h2 class="text-3xl font-bold text-center z-1000">Slide 1 "Pencil"</h2>
                    </div>
                </div>

                <div class="relative slider-item">
                    <Image class="absolute" src={GirlWithRedHat} alt="a girl with a red hat" style="max-width: 100%;height: 100%;object-fit:cover;" />
                    <div class="absolute right-0 flex items-center content-center justify-center w-1/3 h-full px-4 bg-amber-100/50">
                        <h2 class="text-3xl font-bold text-center z-1000">Slide 2 "Girl with red hat"</h2>
                    </div>
                </div>

                <div class="relative slider-item">
                    <Image class="absolute" src={Graffiti} alt="a graffiti" style="max-width: 100%;height: 100%;object-fit:cover;" />
                    <div class="absolute right-0 flex items-center content-center justify-center w-1/3 h-full px-4 bg-amber-100/50">
                        <h2 class="text-3xl font-bold text-center z-1000">Slide 3 "Graffiti"</h2>
                    </div>
                </div>

                <div class="relative slider-item">
                    <Image class="absolute" src={Batman} alt="a batman" style="max-width: 100%;height: 100%;object-fit:cover;" />
                    <div class="absolute right-0 flex items-center content-center justify-center w-1/3 h-full px-4 bg-amber-100/50">
                        <h2 class="text-3xl font-bold text-center z-1000">Slide 3 "Batman"</h2>
                    </div>
                </div>
            </ul>
        
            <button type="button" class="slider-nav"></button>
            <button type="button" class="slider-nav slider-nav-next"></button>
        
            <div class="slider-indicators">
                <button class="active"></button>
                <button></button>
                <button></button>
                <button></button>
            </div>
        </div>
    </main>
</LayoutSite>

<script src="https://cdn.jsdelivr.net/npm/swiffy-slider@1.6.0/dist/js/swiffy-slider.min.js" crossorigin="anonymous" defer></script>

