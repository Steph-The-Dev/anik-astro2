---
import LayoutSite from '@layouts/LayoutSite.astro'

---

<!-- Using the great slider by Swiffy: https://swiffyslider.com/ -->

<LayoutSite>
    <main class="h-screen p-12 bg-amber-100">
        <div class="h-full swiffy-slider slider-item-reveal slider-item-ratio-1x1 slider-nav-visible slider-nav-autoplay slider-nav-autopause" data-slider-nav-autoplay-interval="3000">
            <ul class="slider-container">
                <div class="relative slider-item">
                    <img class="absolute" src="https://source.unsplash.com/49b9l_29ceA/1600x900" style="max-width: 100%;height: 100%;object-fit:cover;">
                    <h2 class="absolute right-0 w-1/3 h-full text-3xl font-bold z-1000 bg-amber-100/50">Slide 1</h2>

                </div>
                <li><img src="https://source.unsplash.com/nKAglN6HBH8/1600x900" style="max-width: 100%;height: 100%;object-fit:cover;"></li>
                <li><img src="https://source.unsplash.com/E9ZwWcMGzj8/1600x900" style="max-width: 100%;height: 100%;object-fit:cover;"></li>
            </ul>
        
            <button type="button" class="slider-nav"></button>
            <button type="button" class="slider-nav slider-nav-next"></button>
        
            <div class="slider-indicators">
                <button class="active"></button>
                <button></button>
                <button></button>
            </div>
        </div>
    </main>
</LayoutSite>

<script src="https://cdn.jsdelivr.net/npm/swiffy-slider@1.6.0/dist/js/swiffy-slider.min.js" crossorigin="anonymous" defer></script>

