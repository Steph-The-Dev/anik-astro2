---
import LayoutSite from "@layouts/LayoutSite.astro";
import { Image } from "astro:assets";

import AnikKontakt from "@images/AnikKontakt_H30A2015.webp";
import Telefon from "@images/telefon.webp";
---

<LayoutSite>
  <main id="contact" class="mx-auto bg-[var(--background-100)]">
    <section class="md:w-5/6 max-w-[1600px] gap-12 py-12 mx-auto ">
      <div id="contact-information" class="w-full cnt_info">
        <div
          class="mx-4 mb-2 rounded-md lg:mx-0 text-[var(--text-600)]"
        >
          <h2 id="contact-information__name">Kontakt</h2>
        </div>
      </div>

      <div class="grid gap-1 md:grid-cols-[1fr_1fr] xl:grid-cols-[1fr_2fr]">
        <div
          class="w-auto overflow-hidden max-h-[500px] md:max-h-fit"
        >
          <Image
            src={Telefon}
            alt="Hier ist ein Bild von einem Telefon."
            class="object-cover object-top w-full h-full cnt_img"
          />
        </div>

        <!-- https://web3forms.com/ -->
        <div class="col-span-1 items-center cnt_form">
          <div class="container flex mx-auto h-full">
            <div
              class="w-full mx-auto bg-[var(--air-superiority-blue-200)] shadow-sm mt-10 md:mt-0 p-2"
            >
              <div class="text-center text-[var(--bone-800)]">
                <h1 class="my-3 text-3xl font-semibold">
                  Schreib mir!
                </h1>
                <p class="text-xl">
                  Bitte fülle untenstehende Informationen aus, um mich zu
                  kontaktieren.
                </p>
              </div>
              <div class="m-7">
                <form
                  action="https://api.web3forms.com/submit"
                  method="POST"
                  id="form"
                  class="h-full"
                >
                  <input
                    type="hidden"
                    name="access_key"
                    value="25c1888d-2861-4dc5-9ae6-ca3148a9bd9a"
                  />
                  <input
                    type="hidden"
                    name="subject"
                    value="Neue Nachricht von deiner Webseite"
                  />
                  <input
                    type="checkbox"
                    name="botcheck"
                    id=""
                    style="display: none;"
                  />

                  <div class="mb-6">
                    <label
                      for="name"
                      class="block mb-2 text-lg"
                      >Vollständiger Name</label
                    >
                    <input
                      type="text"
                      name="name"
                      id="name"
                      placeholder="Vorname Nachname"
                      required
                      class="w-full px-3 py-2 text-gray-800 border border-gray-300 placeholder-amber-800/50 bg-[var(--background-50)] focus:outline-none focus:ring focus:ring-amber-100 focus:border-amber-300"
                    />
                  </div>
                  <div class="mb-6">
                    <label
                      for="email"
                      class="block mb-2 text-lg"
                      >Email Addresse</label
                    >
                    <input
                      type="email"
                      name="email"
                      id="email"
                      placeholder="deine@email.de"
                      required
                      class="w-full px-3 py-2 text-gray-800 border border-gray-300 placeholder-amber-800/50 bg-[var(--background-50)] focus:outline-none focus:ring focus:ring-amber-100 focus:border-amber-300"
                    />
                  </div>
                  <div class="mb-6">
                    <label for="phone" class="text-lg"
                      >Telefonnummer</label
                    >
                    <input
                      type="text"
                      name="phone"
                      id="phone"
                      placeholder="+49 170 123456"
                      required
                      class="w-full px-3 py-2 text-gray-800 border border-gray-300 placeholder-amber-800/50 bg-[var(--background-50)] focus:outline-none focus:ring focus:ring-amber-100 focus:border-amber-300"
                    />
                  </div>
                  <div class="mb-6">
                    <label
                      for="message"
                      class="block mb-2 text-lg"
                      >Nachricht</label
                    >

                    <textarea
                      rows="5"
                      name="message"
                      id="message"
                      placeholder="Nachricht"
                      class="w-full px-3 py-2 text-gray-800 border border-gray-300 placeholder-amber-800/50 bg-[var(--background-50)] focus:outline-none focus:ring focus:ring-amber-100 focus:border-amber-300"
                      required></textarea>
                  </div>
                  <div class="mb-6">
                    <button
                      type="submit"
                      class="w-full px-3 py-4 text-[--text-900] bg-[var(--background-50)] hover:bg-[var(--background-300)] focus:bg-indigo-600 focus:outline-none"
                    >
                      Nachricht abschicken
                    </button>
                  </div>
                  <p class="text-base text-center text-gray-500" id="result">
                  </p>
                </form>
              </div>
            </div>
          </div>
        </div>

      </div>
    </section>
  </main>
</LayoutSite>

<script>
  const form = document.getElementById("form") as HTMLFormElement;
  const result = document.getElementById("result") as HTMLParagraphElement;

  form!.addEventListener("submit", function (e) {
    const formData = new FormData(form);
    e.preventDefault();

    const object = Object.fromEntries(formData);
    const json = JSON.stringify(object);

    result!.innerHTML = "Bitte warten...";

    fetch("https://api.web3forms.com/submit", {
      method: "POST",
      headers: {
        "Content-Type": "application/json",
        Accept: "application/json",
      },
      body: json,
    })
      .then(async (response) => {
        let json = await response.json();
        if (response.status == 200) {
          result!.innerHTML = json.message;
          result!.classList.remove("text-gray-500");
          result!.classList.add("text-green-500");
        } else {
          console.log(response);
          result!.innerHTML = json.message;
          result!.classList.remove("text-gray-500");
          result!.classList.add("text-red-500");
        }
      })
      .catch((error) => {
        console.log(error);
        result!.innerHTML = "Etwas ist schiefgelaufen!";
      })
      .then(function () {
        form!.reset();
        setTimeout(() => {
          result!.style.display = "none";
        }, 3000);
      });
  });
</script>

<style>
  #contact-information__name {
    font-size: clamp(2rem, 1.25rem + 2.5vi, 4rem);
  }
  #contact-information__title {
    font-size: clamp(1rem, 1rem + 0.75vi, 3rem);
  }
</style>
